<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Exclude sensitive data from cloud backup -->
        <exclude domain="sharedpref" path="auth_preferences" />
        <exclude domain="database" path="user_data.db" />
    </cloud-backup>
    <device-transfer>
        <!-- Include app settings in device transfer -->
        <include domain="sharedpref" path="app_preferences" />
    </device-transfer>
</data-extraction-rules>